@model Model.AboutUsInfo

@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("", "", FormMethod.Post, new { id="frmAboutUs" }))
{ 
    @Html.ValidationSummary(false, "Please fix below errors.")
    
    @Html.HiddenFor(model => model.AboutUsId, new { id = "hdnID" })
    
    
    @Html.TextAreaFor(model => model.AboutUs1, new { id = "txtAboutUs1", @class = "" })
    @Html.TextAreaFor(model => model.AboutUs2, new { id = "txtAboutUs1", @class = "" })
    @Html.TextAreaFor(model => model.AboutUs3, new { id = "txtAboutUs1", @class = "" })

    <div style="clear:both"></div>
    
    //string buttonText="Save";
    //if (Model.AboutUsId > 0)
    //{
    //    buttonText = "Update";
    //}
    <input type="button" id="btnSave" value="Save" />    
    <input type="reset" id="btnCancel" value="Cancel" />    
            
}



 
<script type="text/javascript"> 

    $(document).ready(function () {
        $('#btnSave').click(function () {
            if ($('#frmAboutUs').valid())
            {
                $.ajax({
                    url: '/aboutus/About',
                    type: 'POST',
                    data: $('#frmAboutUs').serialize(),
                    success: function (result) {
                        alert(result);
                    }

                });
            }

        });


        

    });

</script>
